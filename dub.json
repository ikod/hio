{
    "name": "hio",
    "authors": [
        "Igor Khasilev"
    ],
    "description": "async io, task and other",
    "license": "proprietary",
    "targetType": "library",
    "preBuildCommands": [
	    "cd $HIO_PACKAGE_DIR/submodules/http-parser && make package"
    ],
    "dependencies": {
        "nbuff": "~>0.1",
        "timingwheels": "~>0",
	"ikod-containers": "~>0"
    },
    "buildTypes": {
        "release": {
            "buildOptions": ["releaseMode", "optimize", "inline"],
            "debugVersions": []
        }
    },
    "configurations": [
        {
            "name": "library",
	    "versions": ["openssl11"]
        },
        {
            "name": "unittest",
	    "versions": ["openssl11"],
            "debugVersions": ["hiossl", "hiohttp"]
        }
    ],
    "lflags": ["-L$HIO_PACKAGE_DIR/submodules/http-parser"],
    "libs-posix": ["cares", "http_parser", "ssl", "crypto"]

}
